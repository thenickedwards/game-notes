    {{/if}}
  </nav>

  <header>
    <h1>Game Notes</h1>
  </header>
  
  <main>
    <aside>
      <p>Game Notes is a space to collect thoughts, ask questions, and share observations on recent soccer games.</p>
    </aside>
    <div class="gallery">
      {{{body}}}
    </div>
  </main>
  {{#if logged_in}}
  <script src="/js/logout.js"></script>
  {{/if}}
</body>

</html>