  <h6>Hello {{username}}! Gather your thoughts and compose your new post below, then click Submit.</h6>
  {{! LOGIN }}
  <div class="post-form">
    <h2 class="page-title">NEW POST</h2>
    <form class="form login-form">
      <div class="form-group">
        <label for="newpost-title">Title:</label>
        <input class="form-input" type="text" id="newpost-title" />
      </div>
      <div class="form-group">
        <label for="newpost-post_content">Post:</label>
        <input class="form-input" type="text" id="newpost-post_content" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Submit</button>
      </div>
    </form>
  </div>

