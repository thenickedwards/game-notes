<h6>Gather your thoughts and compose your new post below, then click Submit.</h6>
  {{! NEW POST FORM }}
  <div class="post-form newpost">
    <h2 class="page-title">NEW POST</h2>
    <form class="form login-form">
      <div class="form-group">
        <label for="newpost-title">Title:</label>
        <input class="form-input" type="text" id="newpost-title" />
      </div>
      <div class="form-group">
        <label for="newpost-post_content">Post:</label>
        <input class="form-input" type="text" id="newpost-post_content" />
      </div>
      <div class="form-group">
        <button id="newpost-submit" class="btn btn-primary" type="submit">Submit</button>
      </div>
    </form>
  </div>

<script src="../js/managePost.js"></script>